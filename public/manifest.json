  {
    "manifest_version": 2,
    "name": "Link2",
    "description": "Aiki Microlearning",
    "version": "1.0.0",
    "permissions": [
      "activeTab",
      "declarativeContent",
      "storage",
      "tabs",
      "webNavigation",
      "webRequest",
      "windows",
      "webRequestBlocking",
      "<all_urls>"
    ],
    "background": {
      "scripts": ["build/background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "index.html?page=popup"
    },
    "content_scripts": [
      {
        "matches": ["https://*/*"],
        "js": ["build/injection.js"]
      }
    ],
    "content_security_policy":"script-src 'self' https://apis.google.com; object-src 'self'",

    "options_page": "/index.html?page=options"
  }